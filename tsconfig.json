{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"rootDir": "./",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"declaration": false,
		"sourceMap": false
	},
  "include": [
    "src/**/*",
    "auth.ts",
    "trigger.config.ts"
  ],
	"exclude": [
		"node_modules",
		"dist",
		"drizzle.config.ts",
		"trigger.config.ts",
		"**/*.test.ts",
		"**/*.spec.ts"
	]
}
